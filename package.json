{
  "name": "@fylgja/stylelint-config",
  "version": "4.2.1",
  "description": "Sharable stylelint config used by Fylgja packages",
  "homepage": "https://getfylgja.com/",
  "repository": "https://github.com/fylgja/stylelint-config",
  "bugs": "https://github.com/fylgja/stylelint-config/issues",
  "author": "Fylgja",
  "license": "MIT",
  "keywords": [
    "fylgja",
    "stylelint",
    "stylelint-config",
    "css linting",
    "scss linting"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "scss/*.js",
    "tailwind/*.js"
  ],
  "scripts": {
    "test:vue:tw": "stylelint _tests_/tw.vue --config tw.js",
    "test:vue:scss": "stylelint _tests_/scss.vue --config scss.js",
    "test:vue": "stylelint _tests_/index.vue --config index.js",
    "test:tw": "stylelint _tests_/*.scss --config tw.js",
    "test:scss": "stylelint _tests_/*.scss --config scss.js",
    "test:css": "stylelint _tests_/*.css --config index.js",
    "test": "npm run test:scss && npm run test:css && npm run test:tw"
  },
  "dependencies": {
    "postcss-scss": "^4.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "devDependencies": {
    "stylelint": "^14.15.0"
  },
  "peerDependencies": {
    "stylelint": "^14.14.0"
  }
}
