{
  "name": "@fylgja/stylelint-config",
  "version": "4.2.1",
  "description": "Sharable stylelint config used by Fylgja packages",
  "homepage": "https://getfylgja.com/",
  "repository": "https://github.com/fylgja/stylelint-config",
  "bugs": "https://github.com/fylgja/stylelint-config/issues",
  "author": "Fylgja",
  "license": "MIT",
  "keywords": [
    "fylgja",
    "stylelint",
    "stylelint-config",
    "css linting",
    "scss linting"
  ],
  "main": "index.js",
  "unpkg": "index.json",
  "files": [
    "*.js",
    "rules/*.js",
    "vue/*.js"
  ],
  "scripts": {
    "test:html": "stylelint _tests_/*.html --config index.js",
    "test:vue:tailwind": "stylelint _tests_/tailwind.vue --config tailwind.js",
    "test:vue:scss": "stylelint _tests_/scss.vue --config scss.js",
    "test:vue:css": "stylelint _tests_/index.vue --config index.js",
    "test:vue": "npm run test:vue:tailwind && npm run test:vue:scss && npm run test:vue:css",
    "test:tailwind": "stylelint _tests_/*.scss --config tailwind.js",
    "test:scss": "stylelint _tests_/*.scss --config scss.js",
    "test:css": "stylelint _tests_/*.css --config index.js",
    "test": "npm run test:css && npm run test:scss && npm run test:tailwind && npm run test:vue"
  },
  "dependencies": {
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "devDependencies": {
    "stylelint": "^14.15.0"
  },
  "peerDependencies": {
    "stylelint": "^14.14.0"
  }
}
