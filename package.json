{
  "name": "@fylgja/stylelint-config",
  "version": "4.0.0",
  "description": "Sharable stylelint config used by Fylgja packages",
  "homepage": "https://getfylgja.com/",
  "repository": "https://github.com/fylgja/stylelint-config",
  "bugs": "https://github.com/fylgja/stylelint-config/issues",
  "author": "Fylgja",
  "license": "MIT",
  "keywords": [
    "fylgja",
    "stylelint",
    "stylelint-config",
    "css linting",
    "scss linting"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "scss/index.js",
    "less/index.js"
  ],
  "scripts": {
    "test-scss": "stylelint _tests_/**/*.scss --config scss/index.js",
    "test-css": "stylelint _tests_/**/*.css --config index.js",
    "test": "npm run test-scss && npm run test-css"
  },
  "dependencies": {
    "postcss-scss": "^4.0.2",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-scss": "^4.0.0"
  },
  "devDependencies": {
    "stylelint": "^14.0.0"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  }
}
