{
  "name": "@fylgja/stylelint-config",
  "version": "4.2.1",
  "description": "Sharable stylelint config used by Fylgja packages",
  "homepage": "https://getfylgja.com/",
  "repository": "https://github.com/fylgja/stylelint-config",
  "bugs": "https://github.com/fylgja/stylelint-config/issues",
  "author": "Fylgja",
  "license": "MIT",
  "keywords": [
    "fylgja",
    "stylelint",
    "stylelint-config",
    "css linting",
    "scss linting"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "scss/*.js",
    "tailwind/*.js"
  ],
  "scripts": {
    "test:scss": "stylelint _tests_/**/*.scss --config scss/index.js",
    "test:css": "stylelint _tests_/**/*.css --config index.js",
    "test:tailwind:css": "stylelint _tests_/**/*.css --config tailwind/index.js",
    "test:tailwind:scss": "stylelint _tests_/**/*.scss --config tailwind/scss.js",
    "test:tailwind": "npm run test:tailwind:scss && npm run test:tailwind:css",
    "test": "npm run test:scss && npm run test:css && test:tailwind"
  },
  "dependencies": {
    "postcss-scss": "^4.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "devDependencies": {
    "stylelint": "^14.15.0"
  },
  "peerDependencies": {
    "stylelint": "^14.14.0"
  }
}
